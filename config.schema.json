{
  "pluginAlias": "haiku",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Haiku by Big Ass Fans"
      },
      "broadcastAddress": {
        "title": "An optional IPv4 address to communicate with Haiku devices.",
        "type": "string",
        "required": false,
        "format": "ipv4"
      },
      "discoveryInterval": {
        "type": "integer",
        "title": "Discovery Interval",
        "description": "An interval (in seconds) in which UDP broadcasts are sent.",
        "default": 30,
        "minimum": 10,
        "maximum": 600
      }
    }
  }
}
